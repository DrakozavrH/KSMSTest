<Window x:Class="MarathonSkills.InventoryReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarathonSkills"
        mc:Ignorable="d"
        Background="{StaticResource BrazilGreen}"
        ResizeMode="NoResize"
        Title="InventoryReportWindow" Height="650" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition />
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Отчет"
            FontSize="36"
            FontFamily="{StaticResource HeaderFont}"
            />

        <DataGrid 
            Grid.Row="1"
            Margin="10"
            
            />

        <Button 
            Grid.Row="2"
            Width="200"
            Margin="0 20"
            Foreground="{StaticResource WsWhite}"
            Background="{StaticResource BrazilBlue}"
            Content="Печать"
            FontSize="24"
            FontFamily="{StaticResource MainFont}"
            />

    </Grid>
</Window>
