<Page x:Class="MarathonSkills.ManageCharitiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills"
      mc:Ignorable="d"
      d:DesignHeight="660"
      d:DesignWidth="1100"
      MaxWidth="1150"
      Title="ManageCharitiesPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition  Height="0.2*"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Управление благотворительными организациями"
            FontSize="36"
            FontFamily="{StaticResource HeaderFont}"
            />

        <Button 
            Name="AddNewCharityButton"
            Grid.Row="1"
            Width="300"
            Height="50"
            Background="{StaticResource BrazilBlue}"
            Foreground="{StaticResource WsWhite}"
            Content="+ Добавить новую"
            FontSize="24"
            HorizontalAlignment="Left"
            Margin="40 0"
            Click="AddNewCharityButton_Click"
            />

        <DataGrid
            Grid.Row="2"
            Margin="20"
            >
            
            
            
        </DataGrid>

    </Grid>
</Page>
